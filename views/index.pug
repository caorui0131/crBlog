extends layout

block css
  -if(isMobileOrPC=='Mobile')
    link(rel='stylesheet', href='/stylesheets/mobile/index.css')
  -else
    link(rel='stylesheet', href='/stylesheets/index.css')
block content
  //- 首页
  div.container
    div.main
      //- h1 博客首页
      //- div.nav
      ul.nav
        li.nav-item.active 
          a 所有
      div(style="display: none;") #{currentUserName}
      div.blogList.box-shadow
        include ./include/blog.pug
      div.footer
        div.copyright-box.div-box
          p ©2020-2021 xxxx
    div.aside
      include ./tagList-less.pug
block script
  -if(isMobileOrPC=='Mobile')
    script(src='/javascripts/mobile/index.js')
  -else
    script(src='/javascripts/index.js')
